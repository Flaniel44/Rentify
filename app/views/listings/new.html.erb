<h1>New Listing</h1>

<div>
	<!--Gives the block a form object --> 
	<!-- form returns code an html element designed to set an attribute of the @user object-->
	<%= form_for(@listing) do |form| %>
	
	
	
	  <%= form.label :title %>
	  <%= form.text_field :title%>
	  <br />
	  
	  <%= form.label :category %>
	  <%= form.text_field :category%>
		<br />
		
		<%= form.label :postalcode %>
	  <%= form.text_field :postalcode%>
		<br />
		
		<%= form.label :price %>
	  <%= form.text_field :price%>
		<br />
		
		<%= form.label :duration %>
	  <%= form.text_field :duration%>
		<br />
		
	
	  <%= form.submit "Create Listing"%>
 	<% end %>
</div>